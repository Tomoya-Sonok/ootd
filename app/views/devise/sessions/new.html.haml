.login-form
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %h2.section-ttl
      %span
      %i.fas.fa-sign-in-alt
      Sign in
    = render "devise/shared/error_messages", resource: resource
    .txtb
      = f.text_field :username
      %span{"data-placeholder" => "Username"}
    .txtb
      -# - if @minimum_password_length
      -#   %em
      -#     (#{@minimum_password_length}文字以上)
      = f.password_field :password, autocomplete: "new-password"
      %span{"data-placeholder" => "Password　(6文字以上)"}
      -# - if devise_mapping.rememberable?
      -#   #new_user__field-content
      -#     = f.check_box :remember_me
      -#     = f.label :remember_me
    #new_user__btns
      = f.submit "ログイン", class: "btn btn-primary"
      = link_to "新規登録", new_registration_path(resource_name), class: "btn btn-success"
      = link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn-warning"