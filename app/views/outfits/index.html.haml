.main
  .main__upper
    .main__upper__actions
      .main__upper__actions__category
        .input-group
          .input-group-btn
            %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
              カテゴリーを選択してください
              %span.caret
            %ul.dropdown-menu.pull-right
              %li
                カテゴリー1
              %li
                カテゴリー2
              %li
                カテゴリー3
              %li
                カテゴリー4
        -# カテゴリー追加のボタンも後々作る予定
      %p#modal
      .main__upper__actions__decide
        = react_component('ootd_react', outfits: @outfits)
      = link_to "コーデを追加", new_outfit_path, class: "main__upper__actions__add"
  .main__lower
    .container
      .main__lower__title
        コーデ一覧
      #outfit-list
        - @outfits.each do |outfit|
          = link_to outfit_path(outfit) do
            .col-md-4#a-outfit
              = image_tag outfit.image.to_s, id: "outfit-image"
              #outfit-tag
                - outfit.tags.each do |tag|
                  = tag.tagname
              #outfit-name
                = outfit.name
