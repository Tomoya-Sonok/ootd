.main
  .main__upper
    .container
      = link_to outfits_path, class: 'backward col-md-1' do
        .back-icon
          = icon('fa fa-2x','angle-double-left')
        .backward-btn
          戻る
      .main__upper__title
        コーデの追加
      .main__upper__cover
        = nested_form_for @outfit do |f|
          .row
            -# id "file"で、fileとdivを紐付けクリック時に連動
            #img_field{:onclick => "$('#file').click()"}
              - if @outfit.image.url.present?
                = image_tag(@outfit.image.url)
              - else
                %i.fas.fa-image
                %i.fas.fa-file-upload.add
            -# id "file"をつけ、「display:none;」で隠す
            = f.file_field :image, class: "image", style: "display:none;", id: "file"
            .col-md
              .form-group#flexbox
                #add-message
                  右のボタンを押すとリセット
                  %label#add-outfit
                    = link_to icon('fa fa-2x','undo-alt'), edit_outfit_path

          .row
            .col-md
              .form-group
                = f.label "コーデ名", id: 'outfit-name' 
                = f.text_field :name, class: 'form_control'
          .row
            .col-md
              .form-group
                = f.fields_for :tags do |t|
                  = t.label "カテゴリー", id: 'outfit-tag'
                  = t.collection_select :tagname, Tag.all, :tagname, :tagname, include_blank: "カテゴリーを選択してください", class: 'input-group' 
          .row
            .col-md
              .form-group
                = f.label "", id: 'add-btn' do
                  = f.submit '更新する', class: 'btn btn-success'