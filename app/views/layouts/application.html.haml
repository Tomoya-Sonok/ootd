      - if notice
        %p.notice
          = notice
      - elsif alert
        %p.alert
          = alert
      .content
        .helmet
          - if current_user
            .helmet__profile
              - if current_user.image.present?
                = image_tag current_user.image.url, class: "helmet__profile__user-image"
              - else
                = image_tag "default.jpg", class: "helmet__profile__user-image"
              .helmet__profile__user-name
